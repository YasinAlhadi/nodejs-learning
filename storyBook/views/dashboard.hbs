<h6>Dashboard</h6>
<h3>Welcome{{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    {{#each stories}}
    <tr>
        <td><a href="/stories/{{_id}}">{{title}}</a></td>
        <td>{{dateForamt createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
        <td>{{status}}</td>
    </tr>
    {{/each}}
</table>
{{else}}
<p>You have not created any stories</p>
{{/if}}