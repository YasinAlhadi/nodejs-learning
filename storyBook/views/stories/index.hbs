<h1>Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{!-- Edit icon --}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
                <br>
                <a href="/stories/edit/{{_id}}" class="btn-floating halfway-fab blue"><i class="fas fa-edit fa-small"></i></a>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn gray">Read more</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No story to display</p>
    {{/each}}
</div>